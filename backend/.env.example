# ========================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# ========================================

# Configurações do Banco de Dados PostgreSQL
DB_HOST=35.199.101.38
DB_PORT=5432
DB_NAME=liberdade-medica
DB_USER=vinilean
DB_PASSWORD=-InfraSSLM-
DB_SSL=false

# ========================================
# CONFIGURAÇÕES DO SERVIDOR
# ========================================

# Porta do servidor
PORT=3001

# Ambiente (development, production, test)
NODE_ENV=development

# ========================================
# CONFIGURAÇÕES DE SEGURANÇA
# ========================================

# Chave secreta para JWT (se implementar autenticação)
# JWT_SECRET=sua_chave_secreta_super_segura_aqui

# Chave para criptografia de dados sensíveis
# ENCRYPTION_KEY=sua_chave_de_criptografia_aqui

# ========================================
# CONFIGURAÇÕES DE CACHE
# ========================================

# TTL do cache em segundos (padrão: 300 = 5 minutos)
CACHE_TTL=300

# Tamanho máximo do cache em MB
CACHE_MAX_SIZE=100

# ========================================
# CONFIGURAÇÕES DE RATE LIMITING
# ========================================

# Limite global de requests por IP (por 15 minutos)
RATE_LIMIT_GLOBAL=1000

# Limite de busca por IP (por minuto)
RATE_LIMIT_SEARCH=30

# Limite de operações de escrita por IP (por 15 minutos)
RATE_LIMIT_WRITE=10

# ========================================
# CONFIGURAÇÕES DE LOGGING
# ========================================

# Nível de log (error, warn, info, debug)
LOG_LEVEL=info

# Arquivo de log (opcional)
LOG_FILE=logs/app.log

# ========================================
# CONFIGURAÇÕES DE EMAIL (para newsletter)
# ========================================

# Configurações SMTP
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=seu_email@gmail.com
# SMTP_PASS=sua_senha_de_app

# Email remetente
# FROM_EMAIL=noreply@liberdade-medica.com
# FROM_NAME=Liberdade Médica

# ========================================
# CONFIGURAÇÕES DE UPLOAD
# ========================================

# Tamanho máximo de upload em MB
# MAX_UPLOAD_SIZE=10

# Diretório de uploads
# UPLOAD_DIR=uploads

# URL base para arquivos estáticos
# STATIC_URL=http://localhost:3001/static

# ========================================
# CONFIGURAÇÕES DE INTEGRAÇÃO
# ========================================

# URL do frontend
FRONTEND_URL=http://localhost:5173

# URLs permitidas para CORS (separadas por vírgula)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://liberdade-medica.com

# ========================================
# CONFIGURAÇÕES DE MONITORAMENTO
# ========================================

# Habilitar métricas de performance
ENABLE_METRICS=true

# Intervalo de coleta de métricas em segundos
METRICS_INTERVAL=60

# ========================================
# CONFIGURAÇÕES DE BACKUP
# ========================================

# Habilitar backup automático
# ENABLE_BACKUP=false

# Intervalo de backup em horas
# BACKUP_INTERVAL=24

# Diretório de backup
# BACKUP_DIR=backups

# ========================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# ========================================

# Habilitar logs detalhados
DEBUG=false

# Habilitar hot reload
HOT_RELOAD=true

# Habilitar CORS para desenvolvimento
DEV_CORS=true
